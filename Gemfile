source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.6'

# Use mongo as the database for Active Record
gem 'mongoid', '~> 5.1', '>= 5.1.2'

# Redis
gem 'redis', '~> 3.2', '>= 3.2.2'

# Sidekiq
gem 'sidekiq', '~> 4.1', '>= 4.1.1'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

# Use Passenger as the app server
gem 'passenger', '~> 5.0', '>= 5.0.27'

group :development, :test do
  # Automatic Ruby code style checking tool.
  gem 'rubocop', '~> 0.39.0'

  # BDD
  gem 'rspec', '~> 3.4', require: false
end

source 'https://rails-assets.org' do
  gem 'rails-assets-jquery', '2.2.3'
  gem 'rails-assets-jquery-ujs', '1.2.1'
  gem 'rails-assets-turbolinks', '2.4.1'
end
